  padding:5px;
}

QTabBar::tab::selected {
  background-color:qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1, stop: 0 #368332,stop: 0.5 #52c74c, stop: 1 #368332);
  border-left: 1px solid #a5a5a5;
